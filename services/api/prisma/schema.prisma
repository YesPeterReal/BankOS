generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id        String   @id @default(uuid())
  accountId String
  amount    Decimal  @db.Decimal(14,2)
  currency  String   @db.VarChar(3)
  merchant  String?
  category  String?
  timestamp DateTime @db.Timestamptz
  rawData   Json?
  createdAt DateTime @default(now())
}